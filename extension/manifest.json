{
  "manifest_version": 3,
  "name": "pw Cookie Export",
  "description": "Export browser cookies to pw-cli for authenticated automation",
  "version": "0.1.0",
  "background": {
    "service_worker": "init.js",
    "type": "module"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_title": "pw Cookie Export",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/background_bg.wasm"],
      "matches": ["<all_urls>"]
    }
  ]
}
